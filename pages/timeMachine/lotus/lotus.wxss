page {
  background-image: url("http://image.potatofield.cn/18-10-27/5592947.jpg");
  background-position: top;
  background-size: cover;
}

/* 生成后的遮罩页面 */
.image-holder {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.534);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

/* 生成后的头像 */
.lotus {
  display: block;
  width: 27vh;
  height: 48vh;
  margin-left: auto;
  margin-right: auto;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
  z-index: 10;
}

/* 头像画布放置在可视区域外 */
.lotus-canvas {
  width: 1080px;
  height: 1920px;
  position: fixed;
  top: 9999px;
}