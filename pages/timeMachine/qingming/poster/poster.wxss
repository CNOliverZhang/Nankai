page {
  background: #333333;
}

.words {
  box-sizing: border-box;
  padding: 30rpx;
  width: 100%;
  height: 300rpx;
  border-radius: 40rpx;
  color: #000000;
  background: #ffffff;
  font-size: 32rpx;
  line-height: 50rpx;
}

.bar-button {
  background-color: rgba(255, 255, 255, 0.8);
  color: #333333;
  transition: 1s
}

.bar-button__hover {
  background-color: rgba(255, 255, 255, 1);
  transition: 1s;
}

.image-holder {
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

.canvas {
  width: 1080px;
  height: 1920px;
  position: fixed;
  top: 9999px;
}

.poster {
  display: block;
  width: 36vh;
  height: 64vh;
  margin-left: auto;
  margin-right: auto;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
  z-index: 20;
}