page {
  background: #333333;
  padding: 0;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.loading {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #333333;
}

.loading-text {
  margin-left: 10vw;
  margin-right: 10vw;
  margin-top: 5vw;
  margin-bottom: 5vw;
  text-align: center;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 80rpx;
  overflow: auto;
}

.loading-circle {
  width: 30vw;
  height: 30vw;
  border-radius: 15vw;
  margin-left: auto;
  margin-right: auto;
  margin-top: 10vw;
  margin-bottom: 10vw;
  background-color: #ffffff;
  font-size: 4vw;
  line-height: 30vw;
  text-align: center;
  color: #333333;
  animation: load 2s infinite;
}

@keyframes load {
  0% {
    transform: rotate(0deg);
  }
  100%{
    transform: rotate(360deg);
  }
}

.content {
  color: #ffffff;
  text-align: center;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.texts {
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.show {
  opacity: 1;
  visibility: visible;
  transition: 1s;
  color: white;
}

.hidden {
  opacity: 0;
  visibility: hidden;
  transition: 1s;
}

.bar-button {
  margin-left: auto;
  margin-right: auto;
  width: 50%;
  background-color: rgba(255, 255, 255, 0.8);
  color: #333333;
  transition: 1s
}

.bar-button__hover {
  background-color: rgba(255, 255, 255, 1);
  transition: 1s;
}