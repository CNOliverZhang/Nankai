page {
  background: #333333;
  padding: 0;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.content {
  color: #ffffff;
  text-align: center;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.texts {
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.show {
  opacity: 1;
  visibility: visible;
  transition: 1s;
  color: white;
}

.hidden {
  opacity: 0;
  visibility: hidden;
  transition: 1s;
}

.bar-button {
  margin-left: auto;
  margin-right: auto;
  width: 50%;
  background-color: rgba(255, 255, 255, 0.8);
  color: #333333;
  transition: 1s
}

.bar-button__hover {
  background-color: rgba(255, 255, 255, 1);
  transition: 1s;
}