<image class='background' src='../../images/background.jpg'></image>
<view class='container'>
  <image class='wish' src='../../images/posterCreator/wish.png'></image>
</view>
<view class='container'>
  <input placeholder='用一句话表达你对母校的热爱吧' maxlength='15' class='input-wish' bindinput='bindKeyInput'></input>
</view>
<view class='container'>
  <button class='bar-button' hover-class='bar-button__hover' bindtap='next'>我写好了，继续吧</button>
</view>
<view class='container'>
  <view class='left'>
    <button class='bar-button return-button' hover-class='return-button__hover' bindtap='prev'>返回主界面</button>
  </view>
  <view class='right'>
    <button class='bar-button' hover-class='bar-button__hover' open-type='share'>分享给朋友</button>
  </view>
</view>