/**app.wxss**/

page {
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background-image: url(http://image.potatofield.cn/18-10-29/18567134.jpg);
  background-size: cover;
  background-attachment: fixed;
  background-position: bottom;
}

button {
  border-radius: 0;
  padding-left: 0;
  padding-right: 0;
}

button::after {
  border-radius: 0;
  border: none;
}

input {
  text-align: center;
  height: 80rpx;
  border-radius: 40rpx;
  color: #000000;
  background: #ffffff;
  font-size: 32rpx;
}

.container {
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.two-columns {
  column-count: 2;
  column-gap: 5vw;
}

.three-columns {
  column-count: 3;
  column-gap: 5vw;
}

.four-columns {
  column-count: 4;
  column-gap: 5vw;
}

.logo {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 40vw;
  height: 40vw;
}

.bar-button {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #7a0c6e;
  color: #ffffff;
  font-size: 32rpx;
}

.return-button {
  background-color: #aaaaaa;
}

.bar-button__hover {
  background-color: #620a58;
}

.return-button__hover {
  background-color: #919191;
}

.instruction {
  text-align: center;
  font-size: 24rpx;
  color: #787878;
}

.title {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  text-align: center;
  font-weight: bold;
  font-size: 48rpx;
  color: #7a0c6e;
}

.subtitle {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  font-size: 40rpx;
  color: #7a0c6e;
}

.content {
  text-align: justify;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #787878;
}

.center {
  text-align: center;
}

.indent {
  text-indent: 2em;
}

.block-button {
  height: 45vw;
  border-radius: 40rpx;
}

.button-mask {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.button-mask__hover {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.1;
  background-color: #000000;
  z-index: 10;
}

.button-image {
  width: 100%;
  height: 100%;
}