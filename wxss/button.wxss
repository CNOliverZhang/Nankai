.bar-button {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #7a0c6e;
  color: #ffffff;
  font-size: 32rpx;
}

.bar-button__hover {
  background-color: #620a58;
}

.return-button {
  background-color: #aaaaaa;
}

.return-button__hover {
  background-color: #919191;
}

.side-button {
  flex-basis: 25%;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

.block-button {
  background-color: #ffffff;
  height: 45vw;
  border-radius: 40rpx;
}

.button-mask {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.button-mask__hover {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0.1;
  background-color: #000000;
  z-index: 10;
}

.button-image {
  width: 100%;
  height: 100%;
}